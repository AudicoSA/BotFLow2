# BotFlow2 SaaS Platform - Environment Variables
# Copy this file to .env.local for local development
# Configure these in Vercel Dashboard for production

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BotFlow
NODE_ENV=development

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ===========================================
# PAYSTACK CONFIGURATION (South Africa)
# ===========================================
# Get these from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Plan codes (create these in Paystack dashboard)
PAYSTACK_PLAN_AI_ASSISTANT=PLN_xxxxxxxxxxxxx
PAYSTACK_PLAN_WHATSAPP_ASSISTANT=PLN_xxxxxxxxxxxxx
PAYSTACK_PLAN_RECEIPT_ASSISTANT=PLN_xxxxxxxxxxxxx
PAYSTACK_PLAN_BUNDLE=PLN_xxxxxxxxxxxxx

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
OPENAI_ORGANIZATION_ID=org-xxxxxxxxxxxxx

# Default model and settings
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# ===========================================
# WHATSAPP BUSINESS API CONFIGURATION
# ===========================================
# Get from: https://developers.facebook.com/apps/
META_APP_ID=xxxxxxxxxxxxx
META_APP_SECRET=xxxxxxxxxxxxx
META_ACCESS_TOKEN=xxxxxxxxxxxxx

# WhatsApp Business Account
WHATSAPP_PHONE_NUMBER_ID=xxxxxxxxxxxxx
WHATSAPP_BUSINESS_ACCOUNT_ID=xxxxxxxxxxxxx
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token-here

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# PostHog - https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry - https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
SENTRY_AUTH_TOKEN=xxxxxxxxxxxxx

# Vercel Analytics (automatically configured on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxxxxxxxxxxxx

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@botflow.co.za
EMAIL_REPLY_TO=support@botflow.co.za

# ===========================================
# GOOGLE CLOUD (for OCR)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxxxx\n-----END PRIVATE KEY-----"
GOOGLE_CLOUD_CLIENT_EMAIL=vision-api@your-project.iam.gserviceaccount.com

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# REDIS (for background jobs - optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your-redis-token

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_WHATSAPP_ASSISTANT=true
NEXT_PUBLIC_ENABLE_RECEIPT_ASSISTANT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# CRON JOBS
# ===========================================
# Secret for authenticating cron job requests
CRON_SECRET=your-cron-secret-here

# ===========================================
# PRODUCTION URLS (Vercel auto-populates these)
# ===========================================
# VERCEL_URL is automatically set by Vercel
# VERCEL_ENV is automatically set (production, preview, development)
